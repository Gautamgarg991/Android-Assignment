<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:foregroundTintMode="src_atop"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/kreon"
        android:gravity="center"
        android:text="Microsoft Teams"
        android:textColor="#8661C5"
        android:textSize="30dp" />

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/teamss"
        app:civ_border_color="#918F8F"
        app:civ_border_width="2dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/get_started"
        android:textSize="17dp" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="55dp"
        android:background="@drawable/rounded_shape"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:hint="Enter Email, Phone, or Skype" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="70dp"
        android:layout_marginTop="10dp"
        android:text="Sign In"
        android:backgroundTint="#FF8661C5"
        android:textAllCaps="false" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:text="Get help with signing in"
        android:textColor="#FF8661C5"
        android:textSize="20dp" />


    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Join a meeting"
        android:textAllCaps="false"
        android:textColor="#FF8661C5"
        app:strokeColor="#888383"
        app:strokeWidth="2dp" />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Sign up for free"
        android:textAllCaps="false"
        android:textColor="#FF8661C5"
        app:icon="@drawable/microsoft"
        app:iconGravity="textStart"
        app:iconPadding="10dp"
        app:iconSize="25dp"
        app:iconTint="#00FFFFFF"
        app:iconTintMode="screen"
        app:strokeColor="#888383"
        app:strokeWidth="2dp" />


</LinearLayout>